<?xml version="1.0" ?>
<c:PlaceMarkerEditorView xmlns:mx="http://www.adobe.com/2006/mxml"
                         xmlns:c="org.arisgames.editor.components.*"
                        >

    <mx:Form id="pmForm">
        <mx:FormItem id="labelFI" label="Label" required="true">
            <mx:TextInput id="locLabel" width="175"/>
        </mx:FormItem>
        <mx:FormItem id="errorRangeFI" label="Error Range (m)" required="true">
            <mx:NumericStepper id="errorRange" minimum="0" maximum = "9999999999" stepSize="10"/>
        </mx:FormItem>
		<mx:FormItem label="QR Code" required="true">
			<mx:TextInput id="qrCode" width="175"/>
		</mx:FormItem>
		<mx:FormItem id="quantityFI" label="Quantity" required="true">
				<mx:NumericStepper id="quantity" minimum="1" maximum="9999999999" stepSize="1" width="65"/>
		</mx:FormItem>
        <mx:FormItem id="hiddenFI">
            <mx:CheckBox id="hidden" label="Hidden"/>
        </mx:FormItem>
        <mx:FormItem id="autoDisplayFI">
            <mx:CheckBox id="autoDisplay" label="Auto Display"/>
        </mx:FormItem>	
		<mx:FormItem id="quickTravelFI">
			<mx:CheckBox id="quickTravel" label="Quick Travel"/>
		</mx:FormItem>				
    </mx:Form>
    <mx:HBox horizontalAlign="center" width="100%">
        <mx:Button id="openRequirementsEditorButton" label="Edit Requirements"/>
    </mx:HBox>
    <mx:VBox height="10" width="100%"/>
    <mx:HBox horizontalAlign="right" width="100%">
        <mx:Button id="deletePlaceMarkDataButton" label="Delete"/>
        <mx:Spacer width="20"/>
        <mx:Button id="savePlaceMarkDataButton" label="Save"/>
        <mx:Spacer width="20"/>
    </mx:HBox>

    <mx:VBox height="10" width="100%"/>

    <mx:StringValidator source="{locLabel}" property="text" minLength="4" maxLength="150" trigger="{savePlaceMarkDataButton}" triggerEvent="click"/>

</c:PlaceMarkerEditorView>
