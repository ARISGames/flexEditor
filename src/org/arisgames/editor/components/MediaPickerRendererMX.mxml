<?xml version="1.0"?>
<c:MediaPickerRendererView xmlns:mx="http://www.adobe.com/2006/mxml"
  xmlns:c="org.arisgames.editor.components.*"
  creationPolicy="all"
  width="100%"
  height="100%"
  horizontalAlign="center"
>

<mx:Canvas id="imageCanvas" borderStyle="solid" width="80" height="80">
  <mx:Image id="image" width="100%" height="100%" horizontalAlign="center" maintainAspectRatio="true" scaleContent="true"/>
</mx:Canvas>

<mx:Button id="avButton" label="View Media" visible="false" includeInLayout="false"/>

<mx:Form>
  <mx:FormItem label="Name" required="true">
    <mx:TextInput id="mediaName" width="100" editable="false"/>
  </mx:FormItem>
</mx:Form>

<mx:Label id="secretText"/>
<mx:TextInput id="moreSecretText" width="100"/>

<mx:Button id="saveButton" label="Save Name Change" visible="false" includeInLayout="false"/>
<mx:Button id="deleteButton" label="Delete" visible="false" includeInLayout="false"/>

</c:MediaPickerRendererView>

