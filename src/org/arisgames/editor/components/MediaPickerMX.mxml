<?xml version="1.0"?>
<c:MediaPickerView xmlns:mx="http://www.adobe.com/2006/mxml"
  xmlns:c="org.arisgames.editor.components.*"
  creationPolicy="all"
  width="110"
  height="150"
  horizontalAlign="center"
  horizontalScrollPolicy="off"
  >

  <mx:VBox horizontalAlign="center" verticalAlign="bottom">
    <mx:Canvas id="imageCanvas" borderStyle="solid" width="80" height="80">
      <mx:Image id="image" width="100%" height="100%" maintainAspectRatio="true" scaleContent="true" />
    </mx:Canvas>
    <mx:Button id="viewAVButton" label="View Media" width="110"/>
    <mx:Button id="removeMediaButton" label="Remove Media" width="110"/>
    <mx:Button id="chooseMediaButton" label="Choose Media" width="110"/>
  </mx:VBox>

</c:MediaPickerView>
