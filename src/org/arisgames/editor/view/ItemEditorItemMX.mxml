<?xml version="1.0"?>
<v:ItemEditorItemView xmlns:mx="http://www.adobe.com/2006/mxml"
                                  xmlns:main="org.arisgames.editor.*"
                                  xmlns:v="org.arisgames.editor.view.*"
                                  xmlns:c="org.arisgames.editor.components.*"
                                  title="Item Editor"
                                  paddingTop="10"
                                  paddingLeft="10"
                                  paddingRight="10"
                                  paddingBottom="10">

    <mx:HBox id="hbox">
        <c:ItemEditorMediaDisplayMX id="mediaDisplay"/></mx:HBox>
    <mx:VBox id="vbox">
    	<mx:Form id="theForm">
            <mx:FormItem label="Item Name"/>
            <mx:TextInput id="theName" width="200"/>
            <mx:FormItem label="Description" textAlign="left"/>
            <mx:TextArea id="description" width="200" height="110"/>
        </mx:Form>
    	<mx:Form id="checkBoxForm">
			<mx:FormItem id="maxQtyFI" label="Max Qty in Player Inventory" required="true">
				<mx:NumericStepper id="maxQty" minimum="1" maximum="500" stepSize="1"/>
			</mx:FormItem>
			<mx:FormItem label="Dropable?">
            	<mx:CheckBox id="dropable"/>
            </mx:FormItem>
            <mx:FormItem label="Destroyable?">
            	<mx:CheckBox id="destroyable"/>
            </mx:FormItem>            
        </mx:Form>
    </mx:VBox>

    <mx:ControlBar id="folderControlBar">
        <mx:Spacer width="100%" id="spacer"/>
        <mx:Button id="cancelButton" label="Cancel"/>
        <mx:Button id="saveButton" label="Save And Close"/>
    </mx:ControlBar>

    <mx:StringValidator id="v1" source="{theName}" property="text" minLength="1" maxLength="50" required="true"/>
    <mx:StringValidator id="v2" source="{description}" property="text" minLength="1" maxLength="16384" required="false"/>

</v:ItemEditorItemView>
