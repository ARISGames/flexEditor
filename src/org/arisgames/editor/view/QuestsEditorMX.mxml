<?xml version="1.0"?>
<v:QuestsEditorView xmlns:mx="http://www.adobe.com/2006/mxml"
                                  xmlns:main="org.arisgames.editor.*"
                                  xmlns:v="org.arisgames.editor.view.*"
                                  xmlns:c="org.arisgames.editor.components.*"
                                  paddingTop="10"
                                  paddingLeft="10"
                                  paddingRight="10"
                                  paddingBottom="10"
                                  width="1000"
                                  title="Quests Editor"
                                  creationPolicy="all"
                                  >

    <mx:DataGrid id="dg" width="100%" rowCount="10" editable="true" dataProvider="{quests}" draggableColumns="false">
        <mx:columns>
            <!--<mx:DataGridColumn dataField="questId" headerText="Id" editable="false" width="50"/>-->
            <mx:DataGridColumn dataField="title" headerText="Title" editable="true"/>
            <mx:DataGridColumn dataField="activeText" headerText="Text when Active" editable="true"/>
			<mx:DataGridColumn headerText="Requirements for Active" editable="false">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Button label="Requirements" click="outerDocument.handleRequiementsForVisableButtonClick(event)"/>
					</mx:Component>	
				</mx:itemRenderer>
			</mx:DataGridColumn>
			<mx:DataGridColumn dataField="completeText" headerText="Text when Complete" editable="true"/>
			<mx:DataGridColumn headerText="Requirements for Complete" editable="false">
				<mx:itemRenderer>
					<mx:Component>
						<mx:Button label="Requirements" click="outerDocument.handleRequirementsForCompleteButtonClick(event)"/>
					</mx:Component>
				</mx:itemRenderer>
			</mx:DataGridColumn>
			<mx:DataGridColumn headerText="Delete" editable="false" width="50">
                <mx:itemRenderer>
	                <mx:Component>
	                    <mx:LinkButton label="X" click="outerDocument.handleDeleteButtonClick(event)"/>
	                </mx:Component>
	            </mx:itemRenderer>
            </mx:DataGridColumn>
        </mx:columns>
    </mx:DataGrid>

    <mx:ControlBar width="100%" horizontalAlign="right">
        <mx:Button id="addQuestButton" label="+"/>
    </mx:ControlBar>

    <mx:ControlBar width="100%" horizontalAlign="right">
        <mx:Button id="closeButton" label="Close"/>
    </mx:ControlBar>

</v:QuestsEditorView>