<?xml version="1.0"?>
<v:ItemEditorMediaPickerView xmlns:mx="http://www.adobe.com/2006/mxml"
                                  xmlns:main="org.arisgames.editor.*"
                                  xmlns:v="org.arisgames.editor.view.*"
                                  xmlns:c="org.arisgames.editor.components.*"
                                  xmlns:controls="com.ninem.controls.*"
                                  xmlns:containers="flexlib.mdi.containers"
                                  paddingTop="10"
                                  paddingLeft="10"
                                  paddingRight="10"
                                  paddingBottom="10"
                                  >

    <mx:XML id="xmlData">
        <nodes label="{AppConstants.MEDIATYPE}">
            <node label="{AppConstants.MEDIATYPE_IMAGE}">
                <node label="{AppConstants.MEDIATYPE_UPLOADNEW}"/>
            </node>
            <node label="{AppConstants.MEDIATYPE_AUDIO}">
                <node label="{AppConstants.MEDIATYPE_UPLOADNEW}"/>
            </node>
            <node label="{AppConstants.MEDIATYPE_VIDEO}">
                <node label="{AppConstants.MEDIATYPE_UPLOADNEW}"/>
            </node>
            <node label="{AppConstants.MEDIATYPE_ICON}">
                <node label="{AppConstants.MEDIATYPE_UPLOADNEW}"/>
            </node>
        </nodes>
    </mx:XML>

    <controls:TreeBrowser id="treeBrowser" width="380" height="263" dataProvider="{xmlData}" showDetails="true" horizontalScrollPolicy="auto" verticalScrollPolicy="off" showRoot="false"/>

    <mx:ControlBar id="folderControlBar">
        <mx:Spacer width="100%" id="spacer"/>
        <mx:Button id="closeButton" label="Close"/>
    </mx:ControlBar>

    <mx:Script><![CDATA[
        import org.arisgames.editor.util.AppConstants;          ]]></mx:Script>
</v:ItemEditorMediaPickerView>