<?xml version="1.0" encoding="UTF-8"?>
<services-config>
    <services>
        <service id="amfphp-flashremoting-service"
                 class="flex.messaging.services.RemotingService"
                 messageTypes="flex.messaging.messages.RemotingMessage">

            <destination id="amfphp">
                <channels>
                    <channel ref="my-amfphp"/>
                </channels>
                <properties>
                    <source>*</source>
                </properties>
            </destination>
        </service>
    </services>
    <channels>
        <channel-definition id="my-amfphp" class="mx.messaging.channels.AMFChannel">
        
        <!-- DAVEMBP: <endpoint uri="http://davembp.local/server/gateway.php" class="flex.messaging.endpoints.AMFEndpoint"/>  DAVEMBP --> 
   		<!-- DEV <endpoint uri="http://dev.arisgames.org/server/gateway.php" class="flex.messaging.endpoints.AMFEndpoint"/> DEV -->
   		<!-- QA: <endpoint uri="http://qa.arisgames.org/server/gateway.php" class="flex.messaging.endpoints.AMFEndpoint"/> QA -->
       	<!-- PROD: <endpoint uri="http://www.arisgames.org/server/gateway.php" class="flex.messaging.endpoints.AMFEndpoint"/> PROD -->
       	
       	<!-- Copy and paste one of the above lines over the one below, rather than commenting/uncommenting them all the time -->
   		<endpoint uri="http://dev.arisgames.org/server/gateway.php" class="flex.messaging.endpoints.AMFEndpoint"/>
       	
        </channel-definition>
    </channels>
</services-config>